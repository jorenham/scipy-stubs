# https://editorconfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

# 4 space indentation
[*.{py, pyi}]
indent_size = 4

# 2 space indentation
[{*.json,*.jsonc,*.yml,*.yaml}]
indent_size = 2
